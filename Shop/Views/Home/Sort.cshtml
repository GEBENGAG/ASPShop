


@{
    var name = Model[0].Category.Name;
    ViewData["Title"] = $"Sort by {name} ";
}


<a asp-controller="Home" asp-action="Index">Back</a>
    

<div class="mt-3">
        <table class=" table" id="tableCountries" >
        <thead>All goods in category @name</thead>
        @foreach(var item in Model)
        {
            <tr>
                
                <td >@item.Name</td>
                <td >@item.Price</td>
                <td ><a asp-controller="Home"  asp-action="Sort" asp-route-name="@item.Category.Name">@item.Category.Name</a></td>
            </tr>
        }
        </table>
</div>
